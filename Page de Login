<script>
    function confirmLogin() {
        const username = document.getElementById('username').value;
        
        // Exibe a pergunta de confirma√ß√£o e a imagem
        document.getElementById('confirm-message').textContent = `Tem certeza sobre isso ${username}? Deseja continuar?ü§®`;
        document.getElementById('confirm-container').style.display = 'block';
        
        return false; // Previne o envio do formul√°rio at√© que o usu√°rio confirme
    }

    function finalizeLogin() {
        const username = document.getElementById('username').value;
        const password = document.getElementById('password').value;
        
        document.getElementById('output').textContent = `Caso tenha esquecido bobinho: Login:${username} Senha:${password}`;
        document.getElementById('confirm-container').style.display = 'none';
    }
</script>

