<div class="container">
    <h2>Login</h2>
    <form id="loginForm" onsubmit="return confirmLogin()">
        <input type="text" id="username" placeholder="Usu√°rio" required><br>
        <input type="password" id="password" placeholder="Senha" required><br>
        <button type="submit">Login</button>
    </form>
    
    <div id="confirm-container">
        <p id="confirm-message"></p>
        <div id="image-container">
            <!-- Substitua o valor do atributo src pela URL da sua imagem -->
            <img id="login-image" src="https://i.pinimg.com/736x/18/86/5d/18865d7c35f303a9a72690eccf02c33e.jpg" alt="Imagem de confirma√ß√£o">
        </div>
        <button onclick="finalizeLogin()">Confirmar</button>
    </div>
    <p id="output"></p>
